<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <title>Form cadastro de Agendamento</title>
    </head>
<body>
    <%- include('partials/header') %>
    <h1>Cadastro de Agendamento</h1>
    <form action="/cad_agendamento" method="post">
        <div class="mb-3">
            <label class="form-label" for="paciente">Paciente:</label>
            <select name="paciente" id="paciente" class="form-select">
                <% pacientes.forEach(paciente => { %>
                    <option value="<%= paciente.id %>"><%= paciente.nome %></option>
                <% }); %>
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label" for="dentista">Dentista:</label>
            <select name="dentista" id="dentista" class="form-select">
                <% dentistas.forEach(dentista => { %>
                    <option value="<%= dentista.id %>"><%= dentista.nome %></option>
                <% }); %>
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label" for="procedimento">Procedimento:</label>
            <select name="procedimento" id="procedimento" class="form-select">
                <% procedimentos.forEach(procedimento => { %>
                    <option value="<%= procedimento.id %>"><%= procedimento.nome %></option>
                <% }); %>
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label" for="dataAgendada">Data Agendada:</label>
            <input class="form-control" name="dataAgendada" type="date" id="dataAgendada" required>
        </div>
        <div class="mb-3 d-grid gap-2 d-md-flex justify-content-md-end">
            <button class="btn btn-outline-danger">
                <a href="/">Cancelar</a>
            </button>
            <button class="btn btn-outline-success" type="submit">
                Salvar
            </button>
        </div>
    </form>
</body>
</html>
